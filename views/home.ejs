<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OnlyFans</title>
    <link
      rel="icon"
      href="assets/images/logo/favicon.ico"
      type="image/x-icon"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/home.css" />
  </head>
  <body>
    <!-- first row -->
    <div class="container-fluid">
      <div class="row">
        <!-- two equal columns in the first row -->
        <!-- left column -->
        <div class="col-md-6 first-grid bg-custom-blue left-col">
          <div class="custom-container">
            <!-- image -->
            <img
              src="assets/images/logo/logo-only_thighs-white-nobg.png"
              alt="Page Logo"
              class="hero-image"
            />
            <!-- text below the image -->
            <div class="hero-text">
              Sign up to support your <br />
              favorite creators
            </div>
          </div>
        </div>
        <div class="col-md-6 first-grid small-border right-col">
          <!-- right column -->
          <div class="login-form">
            <h4>Log in</h4>
            <form class="mt-4 mt-md-0">

              <div class="form-floating mb-3 mt-3">
                <input type="email" class="form-control" id="email" name="email" placeholder=""></input>
                <label for="email" id="email-label">Email</label>
              </div>
              <div class="form-floating mb-3 mt-3">
                <input type="password" class="form-control" id="password" name="password" placeholder=""></input>
                <label for="password" id="password-label">Password</label>
              </div>
              <div class="form-check show-pass-text">
                <input class="form-check-input" type="checkbox" value="" id="show-password">
                <label class="form-check-label" for="show-password">
                  Show Password
                </label>
              </div>
            </form>
            <div class="mt-3">
              <p class="forgot-password">
                <a href=""> Forgot Password?</a> .
                <a href="">Sign Up for OnlyThighs</a>
              </p>
              <button class="btn btn-danger">Login with Google</button>
              <button class="btn btn-info">Login with Twitter</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Second Row -->
    <div class="container-fluid second-grid">
      <div class="row">
        <!-- Column that takes up the rest of the page -->
        <div class="col-md-12">
          <!-- Content for the second row -->
          Second Row - Rest of the Page
        </div>
      </div>
    </div>

    <!-- custom JS -->
    <script src="js/home.js"></script>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
